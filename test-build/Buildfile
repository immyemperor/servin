# This is a sample Buildfile for testing
FROM scratch

# Set working directory
WORKDIR /app

# Set environment variables
ENV APP_NAME=test-app
ENV VERSION=1.0.0

# Add some labels
LABEL maintainer="servin-user"
LABEL version="1.0.0"
LABEL description="A test application"

# Set user
USER appuser

# Expose port
EXPOSE 8080

# Set the default command
CMD ["echo", "Hello from Servin!"]
